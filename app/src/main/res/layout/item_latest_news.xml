<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_latest_news_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_latest_news_height"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_latest_news_scene_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/item_latest_news_padding_vertical"
        android:paddingEnd="@dimen/item_latest_news_padding_horizontal"
        android:paddingStart="@dimen/item_latest_news_padding_horizontal"
        android:paddingTop="@dimen/item_latest_news_padding_vertical">

        <TextView
            android:id="@+id/item_latest_news_holder"
            android:layout_width="@dimen/auto"
            android:layout_height="@dimen/auto"
            android:layout_marginEnd="@dimen/item_latest_news_text_margin_icon"
            android:layout_marginStart="@dimen/item_latest_news_text_margin_edge"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/line_space_extra"
            android:textColor="@color/item_text_default"
            android:textSize="@dimen/item_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_latest_news_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/item_latest_news_iv"
            layout="@layout/item_latest_news_image" />


    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#c3c3c3" />
</android.support.v7.widget.CardView>
